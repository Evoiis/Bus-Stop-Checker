<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home">

    <EditText
        android:id="@+id/routeInput"
        android:layout_width="0dp"
        android:layout_height="46dp"
        android:layout_marginTop="380dp"
        android:ems="10"
        android:hint="@string/routeHint"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/UserInBS"
        app:layout_constraintEnd_toEndOf="@+id/UserInBS"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/UserInBS"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/button"
        android:layout_width="0dp"
        android:layout_height="46dp"
        android:layout_marginEnd="28dp"
        android:layout_marginRight="28dp"
        android:onClick="CheckBusStop"
        android:text="@string/button_BStop"
        app:layout_constraintBaseline_toBaselineOf="@+id/UserInBS"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/UserInBS"
        android:layout_width="0dp"
        android:layout_height="46dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="28dp"
        android:ems="10"
        android:hint="@string/button_BSHint"
        android:inputType="number"
        app:layout_constraintEnd_toStartOf="@+id/button"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/routeInput" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="@string/RouteNumNote"
        android:typeface="normal"
        app:fontFamily="sans-serif-condensed"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/UserInBS"
        app:layout_constraintTop_toBottomOf="@+id/UserInBS" />

</android.support.constraint.ConstraintLayout>